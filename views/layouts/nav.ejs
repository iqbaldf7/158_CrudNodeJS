<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Navbar with Icons and Click Effect</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .navbar-nav .nav-link {
            display: flex;
            align-items: center;
            gap: 5px; /* Space between icon and text */
            position: relative;
            transition: color 0.3s ease, transform 0.2s ease;
        }

        .navbar-nav .nav-link i {
            font-size: 1.2rem; /* Icon size */
        }

        .navbar-nav .nav-link:hover {
            color: #0056b3; /* Hover color */
            transform: scale(1.1); /* Slight enlargement on hover */
        }

        .navbar-nav .nav-link:active {
            color: #ff4500; /* Active color */
            transform: scale(0.95); /* Slight shrink on click */
        }

        /* Add a click ripple effect */
        .nav-link::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(0, 0, 0, 0.1);
            border-radius: 50%;
            transform: translate(-50%, -50%);
            transition: width 0.4s ease, height 0.4s ease, opacity 0.6s ease;
            opacity: 0;
        }

        .nav-link:active::after {
            width: 120px;
            height: 120px;
            opacity: 1;
            transition: 0s;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <!-- GitHub Logo -->
            <a class="navbar-brand" href="https://github.com" target="_blank">
                <i class="fab fa-github fa-2x"></i>
            </a>
            <!-- Toggle Button for Mobile View -->
            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarNav"
                aria-controls="navbarNav"
                aria-expanded="false"
                aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <!-- Home -->
                    <li class="nav-item">
                        <a class="nav-link active" href="/">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <!-- Contact -->
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">
                            <i class="fas fa-envelope"></i> Contact
                        </a>
                    </li>
                    <!-- Todo -->
                    <li class="nav-item">
                        <a class="nav-link" href="/todo-view">
                            <i class="fas fa-tasks"></i> Todo
                        </a>
                    </li>
                    <!-- Logout -->
                    <li class="nav-item">
                        <form action="/logout" method="POST" class="d-inline">
                            <button class="btn btn-link nav-link" type="submit">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
